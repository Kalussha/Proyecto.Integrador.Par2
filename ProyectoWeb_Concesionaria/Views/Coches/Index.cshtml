@{
    Layout = "_Layout";
    ViewData["Title"] = "Menú Principal";
}

<!-- Este es el menu principal, reemplaza al frminicio de windows forms -->
<div class="menu-principal">
    <h1>?? Sistema de Gestión de Vehículos</h1>
    <p class="subtitle">Concesionaria - Proyecto Integrador</p>

    @if (TempData["Exito"] != null)
    {
        <div class="alert alert-success">
            @TempData["Exito"]
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-error">
            @TempData["Error"]
        </div>
    }

    <!-- Menu de opciones, igual que los botones del form principal -->
    <div class="menu-grid">
        <a href="@Url.Action("Alta", "Coches")" class="menu-card">
            <div class="card-icon">??</div>
            <h3>ALTA</h3>
            <p>Registrar nuevo vehículo</p>
        </a>

        <a href="@Url.Action("Baja", "Coches")" class="menu-card">
            <div class="card-icon">???</div>
            <h3>BAJA</h3>
            <p>Eliminar vehículo</p>
        </a>

        <a href="@Url.Action("Cambios", "Coches")" class="menu-card">
            <div class="card-icon">??</div>
            <h3>CAMBIOS</h3>
            <p>Modificar datos de vehículo</p>
        </a>

        <a href="@Url.Action("Consultar", "Coches")" class="menu-card">
            <div class="card-icon">??</div>
            <h3>CONSULTAR</h3>
            <p>Buscar vehículo por placa</p>
        </a>

        <a href="@Url.Action("Listado", "Coches")" class="menu-card">
            <div class="card-icon">??</div>
            <h3>LISTADO</h3>
            <p>Ver todos los vehículos</p>
        </a>
    </div>
</div>

<style>
    /* estilos pa que se vea bonito el menu */
    .menu-principal {
        max-width: 1200px;
        margin: 50px auto;
        padding: 20px;
        text-align: center;
    }

    .menu-principal h1 {
        font-size: 2.5em;
        color: #2c3e50;
        margin-bottom: 10px;
    }

    .subtitle {
        color: #7f8c8d;
        font-size: 1.2em;
        margin-bottom: 40px;
    }

    .menu-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 30px;
        margin-top: 40px;
    }

    .menu-card {
        background: white;
        border-radius: 15px;
        padding: 40px 20px;
        text-decoration: none;
        color: #2c3e50;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .menu-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
    }

    .card-icon {
        font-size: 4em;
        margin-bottom: 20px;
    }

    .menu-card h3 {
        font-size: 1.5em;
        margin-bottom: 10px;
        color: #3498db;
    }

    .menu-card p {
        color: #7f8c8d;
        font-size: 0.9em;
    }

    .alert {
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .alert-error {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }
</style>
